generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model VocaNews {
  id          Int      @id @default(autoincrement()) // 뉴스 식별자 (PK)
  external_id String   @unique // 뉴스 외부식별자
  category    String // 뉴스 카테고리
  created_at  DateTime // 뉴스 수집날짜
  date        DateTime // 뉴스 생산날짜
  url         String // 뉴스 링크
  title_jp    String // 뉴스 원문 제목
  title_kr    String // 뉴스 번역 제목

  @@map("voca_news") // 실제 테이블명 매핑
}

model VocaEvent {
  id         Int      @id @default(autoincrement()) // 이벤트 식별자 (PK)
  name       String // 이벤트 이름
  start_date DateTime // 이벤트 시작 날짜
  end_date   DateTime // 이벤트 종료 날짜
  url        String // 이벤트 사이트 링크
  comment    String? // 비고 (주석)

  @@map("voca_event") // 실제 테이블명 매핑
}

model VocaPick {
  id       Int     @id @default(autoincrement()) // 픽 식별자 (PK)
  video_id String  @unique // 유튜브 비디오 ID
  comment  String? // 비고 (주석)

  @@map("voca_pick") // 실제 테이블명 매핑
}

model VocaCommunity {
  id          Int    @id @default(autoincrement()) // 커뮤니티 식별자 (PK)
  name        String // 커뮤니티 이름
  description String // 커뮤니티 설명
  url         String // 커뮤니티 링크

  @@map("voca_community") // 실제 테이블명 매핑
}

model VocaBirthday {
  id    Int      @id @default(autoincrement()) // 생일 식별자 (PK)
  name  String // 캐릭터 이름
  date  DateTime // 생일 (출시일)
  color String // 대표 색상

  @@map("voca_birthday") // 실제 테이블명 매핑
}

model VocaSite {
  id   Int     @id @default(autoincrement()) // 사이트 식별자 (PK)
  name String // 사이트 이름
  url  String // 사이트 링크
  show Boolean // 푸터 표시 여부

  @@map("voca_site") // 실제 테이블명 매핑
}

model VocaPlaylist {
  id          Int     @id @default(autoincrement()) // 플레이리스트 식별자 (PK)
  playlist_id String  @unique // 외부 플레이리스트 ID
  platform    String // 플랫폼 (youtube, spotify)
  name        String // 제목
  description String? // 설명
  creator     String? // 제작자
  is_slider   Boolean @default(false) // 슬라이더 표시 여부

  @@map("voca_playlist") // 실제 테이블명 매핑
}
