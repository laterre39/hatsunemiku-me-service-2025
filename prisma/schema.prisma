generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model VocaNews {
  id          Int      @id @default(autoincrement()) // 뉴스 식별자 (PK)
  external_id String   @unique // 뉴스 외부식별자
  category    String // 뉴스 카테고리
  created_at  DateTime // 뉴스 수집날짜
  date        DateTime // 뉴스 생산날짜
  url         String // 뉴스 링크
  title_jp    String // 뉴스 원문 제목
  title_kr    String // 뉴스 번역 제목

  @@map("voca_news") // 실제 테이블명 매핑
}

model VocaEvent {
  id         Int      @id @default(autoincrement()) // 이벤트 식별자 (PK)
  name       String // 이벤트 이름
  start_date DateTime // 이벤트 시작 날짜
  end_date   DateTime // 이벤트 종료 날짜
  url        String // 이벤트 사이트 링크
  comment    String? // 비고 (주석)

  @@map("voca_event") // 실제 테이블명 매핑
}

model VocaPick {
  id       Int     @id @default(autoincrement()) // 픽 식별자 (PK)
  video_id String  @unique // 유튜브 비디오 ID
  comment  String? // 비고 (주석)

  @@map("voca_pick") // 실제 테이블명 매핑
}

model VocaCommunity {
  id          Int    @id @default(autoincrement()) // 커뮤니티 식별자 (PK)
  name        String // 커뮤니티 이름
  description String // 커뮤니티 설명
  url         String // 커뮤니티 링크

  @@map("voca_community") // 실제 테이블명 매핑
}
