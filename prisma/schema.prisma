generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model VocaNews {
  id          Int      @id @default(autoincrement()) // 뉴스 식별자 (PK)
  external_id String   @unique // 뉴스 외부식별자
  category    String // 뉴스 카테고리
  created_at  DateTime // 뉴스 수집날짜
  date        DateTime // 뉴스 생산날짜
  url         String // 뉴스 링크
  title_jp    String // 뉴스 원문 제목
  title_kr    String // 뉴스 번역 제목

  @@map("voca_news") // 실제 테이블명 매핑
}

model VocaEvent {
  id         Int      @id @default(autoincrement()) // 이벤트 식별자 (PK)
  name       String // 이벤트 이름
  start_date DateTime // 이벤트 시작 날짜
  end_date   DateTime // 이벤트 종료 날짜
  url        String // 이벤트 사이트 링크
  comment    String? // 비고 (주석)

  @@map("voca_event") // 실제 테이블명 매핑
}

model VocaPick {
  id       Int     @id @default(autoincrement()) // 픽 식별자 (PK)
  video_id String  @unique // 유튜브 비디오 ID
  comment  String? // 비고 (주석)

  @@map("voca_pick") // 실제 테이블명 매핑
}

model VocaCommunity {
  id          Int    @id @default(autoincrement()) // 커뮤니티 식별자 (PK)
  name        String // 커뮤니티 이름
  description String // 커뮤니티 설명
  url         String // 커뮤니티 링크
  order       Int    @default(0) // 표시 순서

  @@map("voca_community") // 실제 테이블명 매핑
}

model VocaBirthday {
  id    Int      @id @default(autoincrement()) // 생일 식별자 (PK)
  name  String // 캐릭터 이름
  date  DateTime // 생일 (출시일)
  color String // 대표 색상

  @@map("voca_birthday") // 실제 테이블명 매핑
}

model VocaSite {
  id    Int     @id @default(autoincrement()) // 사이트 식별자 (PK)
  name  String // 사이트 이름
  url   String // 사이트 링크
  show  Boolean // 푸터 표시 여부
  order Int     @default(0) // 표시 순서

  @@map("voca_site") // 실제 테이블명 매핑
}

model VocaPlaylist {
  id          Int     @id @default(autoincrement()) // 플레이리스트 식별자 (PK)
  playlist_id String  @unique // 외부 플레이리스트 ID
  platform    String // 플랫폼 (youtube, spotify)
  name        String // 제목
  description String? // 설명
  creator     String? // 제작자
  is_slider   Boolean @default(false) // 슬라이더 표시 여부
  order       Int     @default(0) // 표시 순서 (낮을수록 먼저 표시)

  @@map("voca_playlist") // 실제 테이블명 매핑
}

// ==================== NextAuth Models ====================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("auth_account") // 테이블명 매핑
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_session") // 테이블명 매핑
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER, ADMIN, STAFF
  accounts      Account[]
  sessions      Session[]

  @@map("auth_user") // 테이블명 매핑
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("auth_verification_token") // 테이블명 매핑
}

// ==================== WhiteList Model ====================

model WhiteList {
  id    Int    @id @default(autoincrement())
  email String @unique
  memo  String?

  @@map("auth_whitelist")
}
